{
  "name": "mailchamp",
  "version": "1.0.1",
  "description": "Check if given email address is valid by checking MX DNS records",
  "engines": {
    "node": ">= 8"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "author": "hongymagic <hongymagic+github@me.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "jest": "^23.4.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "punycode": "^2.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*test.+(ts|tsx|js)",
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
